<form action="/admin/articles/update/{{article._id}}" method="POST" enctype="multipart/form-data">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="{{article.title}}" required>

    <label for="content">Content</label>
    <textarea id="content" name="content" required>{{article.content}}</textarea>

    <label for="tags">Tags</label>
    <input type="text" id="tags" name="tags" value="{{article.tags.join(', ')}}">

    <label for="isPublished">Published</label>
    <input type="checkbox" id="isPublished" name="isPublished" {{#if article.isPublished}}checked{{/if}}>

    <label for="thumbnail">Thumbnail</label>
    <input type="file" id="thumbnail" name="thumbnail">

    <label for="note">Note</label>
    <textarea id="note" name="note">{{article.note}}</textarea>

    <button type="submit">Update Article</button>
</form>
