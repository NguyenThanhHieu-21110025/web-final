<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-hover:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
        }

        .btn-edit,
        .btn-delete {
            transition: background-color 0.3s ease-in-out;
        }

        .btn-edit {
            background-color: #95bee9;
            border-color: #007bff;
        }

        .btn-edit:hover {
            background-color: #f2e235;
            border-color: #004085;
        }

        .btn-delete {
            background-color: #95bee9;
            border-color: #007bff;
        }

        .btn-delete:hover {
            background-color: #f83917;
            border-color: #004085;
        }

        .btn-publish {
            background-color:  #95bee9; 
            border-color: #007bff;
        }

        .btn-publish:hover {
            background-color: #218838;
        }

        .btn-denied {
            background-color:  #95bee9; 
            border-color: #007bff;
        }

        .btn-denied:hover {
            background-color: #c82333;
        }
    </style>
</head>

<body class="bg-light">

    <div class="container mt-5">
        <div class="d-flex justify-content-between">
            <h1>{{title}}</h1>
        </div>

        <hr>

        <div class="mt-3">
            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Bài viết</h5>
                            <p>Approved: {{approvedPostsCount}} | Pending: {{pendingPostsCount}}</p>
                            <a href="/admin/articles" class="btn btn-primary">View All</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Chuyên mục</h5>
                            <p>{{categoriesCount}} Categories</p>
                            <a href="/admin/categories" class="btn btn-primary">View All</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Tags</h5>
                            <p>{{tagsCount}} Tags</p>
                            <a href="/admin/tags" class="btn btn-primary">View All</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Người dùng</h5>
                            <p>{{usersCount}} Users</p>
                            <a href="/admin/users" class="btn btn-primary">View All</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-responsive mt-4">
                <h3>Bài viết chờ duyệt</h3>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each recentArticles}}
                        <tr>
                            <td>{{this._id}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.status}}</td>
                            <td>
                                <a href="/admin/articles/publish/{{this._id}}"
                                    class="btn btn-publish btn-hover">Published</a>
                                <a href="/admin/articles/deny/{{this._id}}" class="btn btn-denied btn-hover">Denied</a>
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="4">No pending articles</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>