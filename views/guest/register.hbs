<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký Tài Khoản</title>
    <link rel="stylesheet" href="/public/css/register.css"> 
</head>

<body>
    <main id="register-main">
        <h2>Đăng Ký Tài Khoản</h2>

        <!-- Hiển thị thông báo lỗi nếu có -->
        {{#if error}}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
        {{/if}}

        <!-- Hiển thị danh sách lỗi -->
        {{#if errors}}
        <ul>
            {{#each errors}}
            <li style="color: red;">{{this.msg}}</li>
            {{/each}}
        </ul>
        {{/if}}

        <!-- Hiển thị thông báo thành công -->
        {{#if success}}
        <div class="alert alert-success" role="alert">
            {{success}}
        </div>
        {{/if}}

        <!-- Form đăng ký -->
        <form id="register-form" method="POST" action="/api/auth/register">
            <!-- Tên người dùng -->
            <div>
                <label for="username">Tên người dùng:</label>
                <input type="text" id="username" name="username" required value="{{formData.username}}">
            </div>

            <!-- Email -->
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required value="{{formData.email}}">
            </div>

            <!-- Mật khẩu -->
            <div>
                <label for="password">Mật khẩu:</label>
                <input type="password" id="password" name="password" required>
            </div>

            <!-- Xác nhận mật khẩu -->
            <div>
                <label for="confirmPassword">Xác nhận mật khẩu:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>

            <!-- Google reCAPTCHA -->
            {{!-- <div class="g-recaptcha" data-sitekey="{{recaptchaSiteKey}}"></div> --}}

            <!-- Nút đăng ký -->
            <button type="submit">Đăng Ký</button>
        </form>

        <!-- Đăng nhập bằng mạng xã hội -->
        <div class="social-login">
            <p class="text-center">Hoặc đăng nhập với tài khoản mạng xã hội:</p>
            <div class="social-buttons">
                <!-- Đăng nhập với Facebook -->
                <a href="/auth/facebook" class="social-button">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/Facebook_f_logo_%282019%29.svg/800px-Facebook_f_logo_%282019%29.svg.png"
                        alt="Facebook">
                </a>

                <!-- Đăng nhập với Google -->
                <a href="/auth/google" class="social-button">
                    <img src="https://fonts.gstatic.com/s/i/productlogos/googleg/v6/24px.svg" alt="Google">
                </a>
            </div>
        </div>
    </main>

    <!-- Google reCAPTCHA Script -->
    {{!-- <script src="https://www.google.com/recaptcha/api.js" async defer></script> --}}
</body>

</html>
