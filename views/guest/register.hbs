<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký Tài Khoản</title>
    <link rel="stylesheet" href="../../public/css/register.css"> <!-- CSS cho form đăng ký -->
    <link rel="stylesheet" href="../../public/css/header.css"> <!-- CSS cho header -->
    <link rel="stylesheet" href="../../public/css/footer.css"> <!-- CSS cho footer -->
</head>

<body>

    <main id="register-main">
        <h2>Đăng Ký Tài Khoản</h2>

        <!-- Form đăng ký -->
        <form id="register-form" method="POST" action="/api/auth/register">
            <!-- Tên người dùng -->
            <div>
                <label for="username">Tên người dùng:</label>
                <input type="text" id="username" name="username" required value="{{username}}">
            </div>

            <!-- Email -->
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required value="{{email}}">
            </div>

            <!-- Mật khẩu -->
            <div>
                <label for="password">Mật khẩu:</label>
                <input type="password" id="password" name="password" required>
            </div>

            <!-- Xác nhận mật khẩu -->
            <div>
                <label for="confirmPassword">Xác nhận mật khẩu:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>

            <!-- Hiển thị thông báo lỗi hoặc thành công -->
            {{#if error}}
            <div class="alert alert-danger" role="alert">
                {{error}}
            </div>
            {{/if}}
            {{#if success}}
            <div class="alert alert-success" role="alert">
                {{success}}
            </div>
            {{/if}}

            <!-- Google reCAPTCHA -->
            <div class="g-recaptcha" data-sitekey="{{process.env.RECAPTCHA_SITE_KEY}}"></div>

            <!-- Nút đăng ký -->
            <button type="submit">Đăng Ký</button>
        </form>

        <div class="social-login">
            <p class="text-center">Hoặc đăng nhập với tài khoản mạng xã hội:</p>
            <div class="social-buttons">
                <!-- Đăng nhập với Facebook -->
                <a href="http://localhost:8080/api/auth/facebook" class="social-button">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/Facebook_f_logo_%282019%29.svg/800px-Facebook_f_logo_%282019%29.svg.png"
                        alt="Facebook">
                </a>

                <!-- Đăng nhập với Google -->
                <a href="http://localhost:8080/api/auth/google" class="social-button">
                    <img src="https://fonts.gstatic.com/s/i/productlogos/googleg/v6/24px.svg" alt="Google">
                </a>
            </div>
        </div>





        <p id="message"></p>
    </main>



    <!-- Google reCAPTCHA Script -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</body>


<script>
    // Lấy form và thêm sự kiện submit
    const form = document.getElementById('register-form');
    form.addEventListener('submit', async (event) => {
        event.preventDefault(); // Ngăn chặn hành vi submit mặc định

        // Lấy dữ liệu từ form
        const username = document.getElementById('username').value;
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirmPassword').value;

        // Kiểm tra xác nhận mật khẩu
        if (password !== confirmPassword) {
            document.getElementById('message').textContent = 'Mật khẩu không khớp!';
            return;
        }

        // Tạo đối tượng dữ liệu
        const data = {
            username,
            email,
            password
        };

        try {
            // Gửi yêu cầu fetch tới backend
            const response = await fetch('http://localhost:8080/api/auth/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            // Xử lý phản hồi từ backend
            if (response.ok) {
                const result = await response.json();
                document.getElementById('message').textContent = 'Đăng ký thành công!';
            } else {
                const error = await response.json();
                document.getElementById('message').textContent = `Lỗi: ${error.message}`;
            }
        } catch (error) {
            console.error('Error during registration:', error);
            document.getElementById('message').textContent = 'Có lỗi xảy ra, vui lòng thử lại.';
        }
    });
</script>
</body>

</html>