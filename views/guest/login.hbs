<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link rel="stylesheet" href="/public/css/login.css">
</head>

<body>
    <main id="login-main">
        <h2>Đăng Nhập</h2>

        <!-- Form đăng nhập -->
        <form id="login-form" method="POST" action="/api/auth/login">
            <!-- Email -->
            <div>
                <label for="email">Email:</label>
                <input type="text" id="email" name="email" required value="{{email}}">
            </div>

            <!-- Mật khẩu -->
            <div>
                <label for="password">Mật khẩu:</label>
                <input type="password" id="password" name="password" required>
            </div>

            <!-- Hiển thị thông báo lỗi hoặc thành công -->
            {{#if error}}
            <div class="alert alert-danger" role="alert">
                {{error}}
            </div>
            {{/if}}
            {{#if success}}
            <div class="alert alert-success" role="alert">
                {{success}}
            </div>
            {{/if}}

            <!-- Nút đăng nhập -->
            <button type="submit">Đăng Nhập</button>
        </form>

        <br>

        <!-- Đăng nhập với mạng xã hội -->
        <div class="social-login">
            <p class="text-center">Hoặc đăng nhập với tài khoản mạng xã hội:</p>
            <div class="social-buttons">
                <!-- Đăng nhập với Facebook -->
                <a href="/api/auth/facebook" class="social-button">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/Facebook_f_logo_%282019%29.svg/800px-Facebook_f_logo_%282019%29.svg.png"
                        alt="Facebook">
                </a>

                <!-- Đăng nhập với Google -->
                <a href="/api/auth/google" class="social-button">
                    <img src="https://fonts.gstatic.com/s/i/productlogos/googleg/v6/24px.svg" alt="Google">
                </a>
            </div>
        </div>

    </main>

    <!-- Xử lý thông báo từ server -->
    <script>
        // Tự động cuộn lên đầu nếu có lỗi
        if (document.querySelector('.alert')) {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
</body>

</html>
