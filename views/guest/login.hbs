<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link rel="stylesheet" href="../../public/css/login.css">
</head>

<body>
    <main id="login-main">
        <h2>Đăng Nhập</h2>

        <form id="login-form">
            <div>
                <label for="email">Email:</label>
                <input type="text" id="email" name="email" required> <!-- Đổi từ username thành email -->
            </div>

            <div>
                <label for="password">Mật khẩu:</label>
                <input type="password" id="password" name="password" required>
            </div>

            <button type="submit">Đăng Nhập</button>
        </form>
        <br>
        <div class="social-login">
            <p class="text-center">Hoặc đăng nhập với tài khoản mạng xã hội:</p>
            <div class="social-buttons">
                <!-- Đăng nhập với Facebook -->
                <a href="http://localhost:8080/api/auth/facebook" class="social-button">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/Facebook_f_logo_%282019%29.svg/800px-Facebook_f_logo_%282019%29.svg.png"
                        alt="Facebook">
                </a>

                <!-- Đăng nhập với Google -->
                <a href="http://localhost:8080/api/auth/google" class="social-button">
                    <img src="https://fonts.gstatic.com/s/i/productlogos/googleg/v6/24px.svg" alt="Google">
                </a>
            </div>
        </div>

        <!-- Thông báo lỗi hoặc thành công -->
        <p id="login-message"></p>
    </main>

    <script>
        // Lấy form và thêm sự kiện submit
        const form = document.getElementById('login-form');
        form.addEventListener('submit', async (event) => {
            event.preventDefault(); // Ngăn chặn hành vi submit mặc định

            // Lấy dữ liệu từ form
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            // Tạo đối tượng dữ liệu
            const data = {
                email,
                password
            };

            try {
                // Gửi yêu cầu fetch tới backend
                const response = await fetch('http://localhost:8080/api/auth/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                // Xử lý phản hồi từ backend
                if (response.ok) {
                    const result = await response.json();
                    document.getElementById('login-message').textContent = 'Đăng nhập thành công!';

                    // Lưu accessToken vào localStorage hoặc sessionStorage nếu cần thiết
                    localStorage.setItem('accessToken', result.accessToken);

                    // Chuyển hướng người dùng đến trang chính hoặc trang profile
                    window.location.href = '/guest/home';  // Thay thế '/' bằng URL bạn muốn chuyển hướng
                } else {
                    const error = await response.json();
                    document.getElementById('login-message').textContent = `Lỗi: ${error.message}`;
                }
            } catch (error) {
                console.error('Error during login:', error);
                document.getElementById('login-message').textContent = 'Có lỗi xảy ra, vui lòng thử lại.';
            }
        });

    </script>
</body>

</html>
