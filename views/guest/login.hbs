<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link rel="stylesheet" href="../../public/css/login.css">
    <link rel="stylesheet" href="../../public/css/header.css"> 
    <link rel="stylesheet" href="../../public/css/footer.css">
</head>

<body>
    {{> header}} <!-- Bao gồm phần header -->
    <main id="login-main">
        <h2>Đăng Nhập</h2>
        
        <!-- Form đăng nhập -->
        <form id="login-form">
            <div>
                <label for="username">Tên người dùng:</label>
                <input type="text" id="username" name="username" required>
            </div>

            <div>
                <label for="password">Mật khẩu:</label>
                <input type="password" id="password" name="password" required>
            </div>

            <button type="submit">Đăng Nhập</button>
        </form>

        <!-- Thông báo lỗi hoặc thành công -->
        <p id="login-message"></p>
    </main>

    {{> footer}} <!-- Bao gồm phần footer -->

    <script>
        // Lấy form và thêm sự kiện submit
        const form = document.getElementById('login-form');
        form.addEventListener('submit', async (event) => {
            event.preventDefault(); // Ngăn chặn hành vi submit mặc định

            // Lấy dữ liệu từ form
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            // Tạo đối tượng dữ liệu
            const data = {
                username,
                password
            };

            try {
                // Gửi yêu cầu fetch tới backend
                const response = await fetch('http://localhost:8080/api/auth/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                // Xử lý phản hồi từ backend
                if (response.ok) {
                    const result = await response.json();
                    document.getElementById('login-message').textContent = 'Đăng nhập thành công!';
                } else {
                    const error = await response.json();
                    document.getElementById('login-message').textContent = `Lỗi: ${error.message}`;
                }
            } catch (error) {
                console.error('Error during login:', error);
                document.getElementById('login-message').textContent = 'Có lỗi xảy ra, vui lòng thử lại.';
            }
        });
    </script>
</body>

</html>
