<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Chủ</title>
    <link rel="stylesheet" href="../../public/css/home.css">
    <link rel="stylesheet" href="../../public/css/header.css">
    <link rel="stylesheet" href="../../public/css/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
</head>

<body>
    {{> header}}

    <div class="container mx-auto px-4 py-8">
        <!-- Bài viết nổi bật -->
        <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">Bài Viết Nổi Bật</h2>
            <div class="bg-white rounded-lg shadow p-4 flex">
                {{#each topArticles}}
                <div>
                    <h3 class="font-semibold">{{this.title}}</h3>
                    <p class="text-gray-700 mb-2">{{this.summary}}</p>
                    <span class="text-gray-500 text-sm">Published: {{this.createdAt}}</span>
                </div>
                {{/each}}
            </div>
        </section>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Bài viết mới nhất -->
            <section>
                <h2 class="text-xl font-bold mb-4">Bài Viết Mới Nhất</h2>
                {{#each latestArticles}}
                <div class="bg-white rounded-lg shadow p-4 mb-4">
                    <h3 class="font-semibold">{{this.title}}</h3>
                    <img src="{{this.image}}" alt="{{this.title}}" class="w-full h-32 object-cover rounded mb-2">
                    <span class="text-gray-500 text-sm">{{this.createdAt}}</span>
                </div>
                {{/each}}
            </section>

            <!-- Bài viết xem nhiều nhất -->
            <section>
                <h2 class="text-xl font-bold mb-4">Bài Viết Xem Nhiều Nhất</h2>
                {{#each mostViewedArticles}}
                <div class="bg-white rounded-lg shadow p-4 mb-4">
                    <h3 class="font-semibold">{{this.title}}</h3>
                    <img src="{{this.image}}" alt="{{this.title}}" class="w-full h-32 object-cover rounded mb-2">
                    <span class="text-gray-500 text-sm">{{this.createdAt}}</span>
                    <p class="text-gray-700">{{this.summary}}</p>
                </div>
                {{/each}}
            </section>
        </div>
    </div>

    {{> footer}}

</body>

</html>
