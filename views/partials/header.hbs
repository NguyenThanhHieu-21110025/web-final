{{!-- header.hbs --}}
<style>
    .dropdown:hover > .dropdown-content {
        display: block;
    }
</style>
<header class="" style="background-color: #f4f4f4">
    <div class="header-container container mx-auto" style="border: none">
        <div class="logo">
            <a href="http://localhost:8080/guest/home">
                <img src="/public/img/logo.jpg" alt="Logo">
            </a>
        </div>
        <nav>
            <ul class="nav-links">
                <li><a href="http://localhost:8080/guest/home">Articles</a></li>
                <li>
                    <div class="dropdown inline-block relative">
                        <button class="text-gray-700 inline-flex items-center">
                            <span>Categories</span>
                        </button>
                        <ul style="width: 150px"
                            class="dropdown-content bg-gray-200 px-3 rounded absolute hidden text-gray-700">
                            {{#each allCategory}}
                                <!-- If category has children -->
                                {{#if children.length}}
                                    <li class="dropdown">
                                        <a class="block whitespace-no-wrap">{{this.parentName}}</a>
                                        <!-- Child items dropdown -->
                                        <ul style="width: 150px; margin-left: 7rem"
                                            class="bg-gray-200 px-3 dropdown-content absolute hidden text-gray-700 pl-5 -mt-10">
                                            {{#each this.children}}
                                                <li><a class="block whitespace-no-wrap"
                                                       href="http://localhost:8080/guest/category/{{_id}}">{{this.category_name}}</a>
                                                </li>
                                            {{/each}}
                                        </ul>
                                    </li>
                                {{else}}
                                    <li><a class="block whitespace-no-wrap" href="#">{{this.parentName}}</a></li>
                                {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>
        <div class="search-bar">
            <form class="flex items-center" action="http://localhost:8080/guest/article-search" method="GET">
                <input class="mx-2 text-black" type="text" name="query" placeholder="Type something...">
                <button type="submit">
                    <img width="24" src="/public/img/search.png" alt="Search">
                </button>
            </form>
        </div>
        <div class="profile-icon">
            <a href="http://localhost:8080/profile">
                <img src="/public/img/user.png" alt="Profile">
            </a>
        </div>
    </div>
</header>

<style>
    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
        background-color: #f4f4f4;
        border-bottom: 1px solid #ccc;
    }

    .logo img {
        height: 40px;
    }

    .nav-links {
        list-style: none;
        display: flex;
        gap: 15px;
        margin: 0;
        padding: 0;
    }

    .nav-links li {
        display: inline;
    }

    .nav-links a {
        text-decoration: none;
        color: #333;
        font-size: 16px;
    }

    .search-bar {
        flex: 1;
        display: flex;
        align-items: center;
        margin: 0 15px;
    }

    .search-bar input[type="text"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .search-bar button {
        background: none;
        border: none;
        cursor: pointer;
        margin-left: 5px;
    }

    .search-bar button img {
        height: 20px;
    }

    .profile-icon img {
        height: 30px;
    }
</style>
